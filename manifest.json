{
  "manifest_version": 3,
  "name": "YouTube Comment Analyzer",
  "version": "1.0",
  "description": "YouTube 댓글을 분석하고 감정을 분류합니다.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.googleapis.com/*",
    "https://my-ai-api-514551150962.asia-northeast3.run.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "popup.html"
} 